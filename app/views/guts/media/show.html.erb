<div class="row">
  <div class="small-12 columns">
    <h1>Medium</h1>
    <%= link_to 'Back', media_path, class: 'secondary button' %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <table>
      <tr>
        <td><strong>Title</strong></td>
        <td><%= @medium.title %></td>
      </tr>
      <tr>
        <td><strong>Tags</strong></td>
        <td><%= @medium.tags %></td>
      </tr>
      <tr>
        <td><strong>Caption</strong></td>
        <td><%= @medium.caption %></td>
      </tr>
      <tr>
        <td><strong>Filable Type</strong></td>
        <td><%= @medium.filable_type %></td>
      </tr>
      <tr>
        <td><strong>Filable</strong></td>
        <td><%= @medium.filable_id %></td>
      </tr>
      <tr>
        <td><strong>File Name</strong></td>
        <td><%= @medium.file_file_name %></td>
      </tr>
      <tr>
        <td><strong>File Size</strong></td>
        <td><%= @medium.file_file_size %></td>
      </tr>
      <tr>
        <td><strong>File Type</strong></td>
        <td><%= @medium.file_content_type %></td>
      </tr>
      <tr>
        <td><strong>File URL</strong></td>
        <td><%= link_to 'View File', @medium.file.url(:original), { target: '_blank' } %></td>
      </tr>
      <tr>
        <td><strong>Created</strong></td>
        <td><%= @medium.created_at %></td>
      </tr>
      <tr>
        <td><strong>Updated</strong></td>
        <td><%= @medium.updated_at %></td>
      </tr>
    </table>
  </div>
</div>