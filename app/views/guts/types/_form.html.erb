<%= form_for(@type) do |f| %>
  <div class="small-12 columns">
    <%= f.submit('Save', class: 'success button') if can?(:update, Guts::Type) || can?(:create, Guts::Type) %>
    <%= link_to 'Back', types_path, class: 'secondary hollow button' %>
    <% unless @type.new_record? %>
      <%= link_to("Records (#{@type.contents.size})", contents_path(type: @type.slug), class: 'hollow button warning') if can? :read, Guts::Content %>
      <%= link_to("Metafields (#{@type.metafields.size})", type_metafields_path(@type), class: 'hollow button') if can? :read, Guts::Metafield %>
      <%= link_to("Media (#{@type.media.size})", type_media_path(@type), class: 'hollow button alert') if can? :read, Guts::Medium %>
    <% end %>
  </div>

  <% if @type.errors.any? %>
    <div class="small-12 columns">
      <div class="callout warning">
        <h5><%= pluralize(@type.errors.count, 'error') %> prohibited this content from being saved:</h5>

        <ul>
          <% @type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if notice %>
    <div class="small-12 columns">
      <div class="callout success notice">
        <p><%= notice %></p>
      </div>
    </div>
  <% end %>

  <div class="small-12 columns">
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <% unless @type.new_record? %>
    <div class="small-12 columns">
      <%= f.label :slug %>
      <%= f.text_field :slug, readonly: true, disabled: true %>
    </div>
  <% end %>

  <%= current_site_form_field f %>
<% end %>
